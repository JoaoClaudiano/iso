# ARQUIVO: .editorconfig
# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# JavaScript files
[*.js]
indent_size = 2
max_line_length = 100

# CSS files
[*.css]
indent_size = 2
max_line_length = 100

# HTML files
[*.html]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2
max_line_length = 100

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = none

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Docker files
[Dockerfile]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Batch files (Windows)
[*.bat]
end_of_line = crlf

# PowerShell files
[*.ps1]
end_of_line = crlf